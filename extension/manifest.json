{
  "name": "Googling Helper",
  "version": "1.0.0",
  "description": "We help you googling by previewing websites and archieve them easily",
  "manifest_version": 3,
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*", "https://www.search.naver.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["cookies", "nativeMessaging", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}
