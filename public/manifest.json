{
  "short_name": "Blog Perviewer",
  "name": "Naver blog preview helper",
  "description": "We help you preview Naver blogs for searching date planns, preview without accessing sites directly!",
  "manifest_version": 3,
  "version": "1.0.0",
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://search.naver.com/*", "http://search.naver.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}
